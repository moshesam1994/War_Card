<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   android:padding="20dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lat_cards"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_card1"
            android:layout_width="wrap_content"
            android:layout_height="205dp"
            android:layout_weight="1"

android:src="@drawable/back"


            />

        <ImageView
            android:id="@+id/iv_card2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:src="@drawable/back"
            />

    </LinearLayout>
    <Button
        android:id="@+id/btm_deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lat_cards"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Deal"
        />
    <LinearLayout
        android:id="@+id/lat_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/tv_card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
           android:text="Player 1:0"
            android:textSize="24dp"
            android:layout_weight="1"

             />

        <TextView
            android:id="@+id/tv_card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Player 2:0"
           android:textSize="24dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_war"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
       android:layout_below="@+id/btm_deal"
        android:layout_weight="1"
        android:gravity="center"
        android:text="WAR"
        android:textSize="72dp"

        />


</RelativeLayout>